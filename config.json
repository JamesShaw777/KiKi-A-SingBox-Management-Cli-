{
  "dns": {
    "servers": [
      {
        "server": "1.1.1.1",
        "tag": "google",
        "type": "tls"
      },
      {
        "server": "223.5.5.5",
        "tag": "local",
        "type": "udp"
      }
    ],
    "rules": [
      { "rule_set": "geosite-geolocation-cn", "server": "local" },
      { "server": "google" }
    ],
    "final": "google",
    "strategy": "ipv4_only"
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "store_rdrc": true
    },
    "clash_api": {
      "default_mode": "Enhanced"
    }
  },
  "inbounds": [
    {
      "type": "tun",
      "address": ["172.19.0.1/30"],
      "auto_route": true,
      "auto_redirect": true,
      "strict_route": true
    }
  ],
  "outbounds": [
    {
      "type": "shadowsocks",
      "tag": "proxy",
      "server": "your_server_address",
      "server_port": 443,
      "method": "aes-128-gcm",
      "password": "your_password"
    },
    {
      "tag": "direct",
      "type": "direct"
    }
  ],
  "route": {
    "rule_set": [
      {
        "format": "binary",
        "tag": "geosite-geolocation-cn",
        "type": "remote",
        "url": "https://cdn.gh-proxy.org/https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-geolocation-cn.srs"
      },
      {
        "format": "binary",
        "tag": "geosite-geolocation-!cn",
        "type": "remote",
        "url": "https://cdn.gh-proxy.org/https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-geolocation-!cn.srs"
      },
      {
        "format": "binary",
        "tag": "geoip-cn",
        "type": "remote",
        "url": "https://cdn.gh-proxy.org/https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip-cn.srs"
      }
    ],
    "rules": [
      {
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "outbound": "direct",
        "rule_set": ["geosite-geolocation-cn", "geoip-cn"]
      },
      {
        "outbound": "proxy",
        "rule_set": ["geosite-geolocation-!cn"]
      }
    ],
    "final": "proxy",
    "default_domain_resolver": "local",
    "auto_detect_interface": true
  }
}
